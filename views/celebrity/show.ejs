<% include ../partials/header %>
<div class= "container">
	<div class= "row">
		<div class= "col-md-3">
			<p class= "lead">Celebs</p>
			<ul class= "list-group ">
				<li class= "list-group-item active">aaaaaa</li>
				<li class= "list-group-item">bbbbbb</li>
				<li class= "list-group-item">cccccc</li>
				<li class= "list-group-item">dddddd</li>
			</ul>
		</div>
		<div class= "col-md-9">
			<div class= "thumbnail show">
				<img src= "<%= celeb.image %>">
				<div class= "caption">
					<p class= " h4 pull-right">1000</p>
					<p class="h4 text-info text-capitalize"><%= celeb.name %></p>
					<p class= "text-justify"><%= celeb.description %></p>
					<p>Created By <em><%=celeb.owner.username %></em></p>
				</div>
			</div>
			<div class= "well">
				<p class= "text-right"><a href= "/celebrities/<%= celeb._id%>/comments/new" class= "btn btn-success btn-sm " >Add New Comment</a></p>
				<hr>
				<p class= "pull-right text-muted">10 days ago</p>
				<% celeb.comments.forEach(function(comment){ %>
					<p class= "text-capitalize"><%= comment.author.username %></p>
					<p class= "text-justify"><%= comment.text %></p>
				<% }) %>
			</div>
		</div>
	</div>
</div>
<% include ../partials/footer %>