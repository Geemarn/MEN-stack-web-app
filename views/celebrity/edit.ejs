<% include ../partials/header %>

<div class= "container">
	<p class= " h1 text-center clrbrown text-capitalize"> edit <%= editCeleb.name %></p>
	<div class= "col-md-4 col-md-offset-4">
		<form action= "/celebrities/<%= editCeleb._id %>?_method=PUT" method= "POST" enctype="multipart/form-data">
			<div class= "form-group">
				<input class= "form-control" type= "text" name= "celeb[name]" value= "<%=editCeleb.name %>">
			</div>
			<div class= "form-group">
				<label for="image">image:</label>
				<input id="image" class= "form-control" type= "file" name= "image" accept="image/*">
			</div>
			<div class= "form-group">
				<input class= "form-control" type= "text" name= "celeb[country]" value= "<%=editCeleb.country %>">
			</div>
			<div class= "form-group">
				<input class= "form-control" type= "text" name= "celeb[description]" value= "<%=editCeleb.description %>">
			</div>
			<div class= "form-group">
				<input class= "btn btn-block clb" type= "submit">
			</div>
		</form>
	</div> 
	
<% include ../partials/footer %>