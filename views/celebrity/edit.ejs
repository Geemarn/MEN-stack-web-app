<% include ../partials/header %>

<div class= "container">
	<h1 class= "text-center"> Edit <%= editCeleb.name %></h1>
	<div class= "col-md-4 col-md-offset-4">
		<form action= "/celebrities/<%= editCeleb._id %>?_method=PUT" method= "POST">
			<div class= "form-group">
				<input class= "form-control" type= "text" name= "celeb[name]" value= "<%=editCeleb.name %>">
			</div>
			<div class= "form-group">
				<input class= "form-control" type= "text" name= "celeb[image]" value= "<%=editCeleb.image %>">
			</div>
			<div class= "form-group">
				<input class= "form-control" type= "text" name= "celeb[description]" value= "<%=editCeleb.description %>">
			</div>
			<div class= "form-group">
				<input class= "btn btn-block" type= "submit">
			</div>
		</form>
	</div> 
<% include ../partials/footer %>