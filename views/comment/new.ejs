<% include ../partials/header %>
<div class= "container">
	<h1 class= "text-center"> Post New Comment about <%= celeb.name %></h1>
	<div class= "col-md-4 col-md-offset-4">
		<form action= "/celebrities/<%= celeb._id%>/comments" method= "POST">
			<div class= "form-group">
				<input class= "form-control" type= "text" name= "comment[author]" placeholder= "Author">
			</div>
			<div class= "form-group">
				<textarea class= "form-control" name= "comment[text]" placeholder= "Text"></textarea>
			</div>
			<div class= "form-group">
				<input class= "btn btn-block" type= "submit">
			</div>
		</form>
	</div> 


<% include ../partials/footer %>