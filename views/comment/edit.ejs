<% include ../partials/header %>
<div class= "container">
	<h1 class= "text-center"> Edit Comment about <%= celeb.name %></h1>
	<div class= "col-md-4 col-md-offset-4">
		<form action= "/celebrities/<%= celeb._id%>/comments/<%= comment._id %>?_method=PUT"    method= "POST">
			<div class= "form-group">
				<textarea class= "form-control" name= "comment[text]"><%= comment.text %></textarea>
			</div>
			<div class= "form-group">
				<input class= "btn btn-block" type= "submit">
			</div>
		</form>
	</div> 


